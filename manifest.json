{
"update_url": "https://clients2.google.com/service/update2/crx",

"manifest_version": 3,
    "name": "AmazonChooser",
    "description": "Comment faire des achats plus avis√©s ?",
    "version": "1.2",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
    ,
	"action": {
		"default_icon": "icon32.png"
	}
	,
    "icons": {
        "16": "icon16.png",
		"32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "host_permissions": [
		"https://www.amazon.fr/*"
    ]
}
